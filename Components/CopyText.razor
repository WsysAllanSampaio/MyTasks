    <div class="d-flex align-items-center">      
        <RadzenStack Style="width: 5%; height: 100%;">
        </RadzenStack>

        <RadzenText TextStyle="TextStyle.Subtitle1" TagName="TagName.H3" Style=" margin-left: 10px">@Description</RadzenText>
    </div>

    <div class="d-flex align-items-center" style="margin-bottom: 20px;">
        <RadzenStack Style="width: 5%; height: 100%;">
            <RadzenButton Icon="@ButtonIcon"
                          Click="CopyTextFunc"
                          Style="@ButtonIconColor" />
        </RadzenStack>

            <div id="textToCopy" style="min-height: 46px; width: 90%; border: 1px solid #ccc; padding: 10px; border-radius: 5px; background-color: #f9f9f9; margin-left: 10px; white-space: pre-wrap;">
                @TextToCopy
            </div>
    </div>
